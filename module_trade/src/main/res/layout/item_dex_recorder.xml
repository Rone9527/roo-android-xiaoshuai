<?xml version="1.0" encoding="utf-8"?>
<com.aries.ui.view.radius.RadiusLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:orientation="vertical"
    android:padding="18dp"
    app:rv_radius="8dp">

    <TextView
        android:id="@+id/tvCreateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="220dp"
        android:textColor="@color/white_color_assist_2"
        android:textSize="14sp"
        tools:text="04-03 12：01：55" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCoinFrom"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvCoinNameFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/ivCoinFrom"
                android:textColor="@color/text_color_dark_normal"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="BTC" />

            <TextView
                android:id="@+id/tvLinkNameFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivCoinFrom"
                android:layout_marginTop="4dp"
                android:textColor="@color/white_color_assist_2"
                android:textSize="14sp"
                tools:text="0.234423" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/t_success"
                android:textColor="#FF108EFF"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_dex_side" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCoinTo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toStartOf="@+id/tvCoinNameTo"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvCoinNameTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_color_dark_normal"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="HT" />

            <TextView
                android:id="@+id/tvLinkNameTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivCoinTo"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:textColor="@color/white_color_assist_2"
                android:textSize="14sp"
                tools:text="0.2323" />
        </RelativeLayout>
    </LinearLayout>
</com.aries.ui.view.radius.RadiusLinearLayout>