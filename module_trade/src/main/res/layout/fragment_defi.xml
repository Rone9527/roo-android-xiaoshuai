<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.aries.ui.view.radius.RadiusLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:rv_backgroundColor="@color/background_color"
        app:rv_topLeftRadius="15dp"
        app:rv_topRightRadius="15dp">

        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_defi_tab"
            app:tl_indicator_color="@color/text_color_dark_normal"
            app:tl_indicator_width="30dp"
            app:tl_tab_space_equal="true"
            app:tl_textSelectColor="@color/text_color_dark_normal"
            app:tl_textUnselectColor="@color/white_color_assist_2"
            app:tl_textsize="14sp"
            app:tl_textsizeUnselect="14sp" />

        <com.roo.core.ui.widget.ExViewPager
            android:id="@+id/view_pager"
            style="@style/ViewNoFade"
            android:background="@color/white" />
    </com.aries.ui.view.radius.RadiusLinearLayout>
</LinearLayout>