<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context="com.roo.mine.mvp.ui.activity.MineActivity">

    <include layout="@layout/default_titlbar" />

    <View
        style="@style/viewDivider"
        android:layout_height="7dp" />

    <LinearLayout
        android:id="@+id/layoutWallet"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_mine_wallet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_manage_wallets"
            android:textColor="@color/text_color_dark_normal"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        style="@style/viewDivider"
        android:layout_height="7dp" />

    <LinearLayout
        android:id="@+id/layoutContact"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_mine_contract" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_address_books"
            android:textColor="@color/text_color_dark_normal"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        style="@style/viewDivider"
        android:layout_height="7dp" />

    <LinearLayout
        android:id="@+id/layoutInvite"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_mine_invite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invite_friend"
            android:textColor="@color/text_color_dark_normal"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        style="@style/viewDivider"
        android:layout_height="1dp"
        android:layout_marginStart="15dp" />

    <LinearLayout
        android:id="@+id/layoutInviteAward"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_invite_award" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_center"
            android:textColor="@color/text_color_dark_normal"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        style="@style/viewDivider"
        android:layout_height="1dp"
        android:layout_marginStart="15dp" />

    <LinearLayout
        android:id="@+id/layoutHelper"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_mine_feedback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_center"
            android:textColor="@color/text_color_dark_normal"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        style="@style/viewDivider"
        android:layout_height="1dp"
        android:layout_marginStart="15dp" />


    <LinearLayout
        android:id="@+id/layoutCourse"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_mine_course" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/use_tutorial"
            android:textColor="@color/text_color_dark_normal"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        style="@style/viewDivider"
        android:layout_height="1dp"
        android:layout_marginStart="15dp" />

    <LinearLayout
        android:id="@+id/layoutAbout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_mine_about" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_us"
            android:textColor="@color/text_color_dark_normal"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ivRoundOrange"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/shape_round_deep_orange"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

    <View
        style="@style/viewDivider"
        android:layout_height="8dp" />

    <LinearLayout
        android:id="@+id/layoutSetting"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_mine_setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:textColor="@color/text_color_dark_normal"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvDebugInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/divide_color"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/white_color_assist_5"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="测试信息"
        tools:visibility="visible" />

    <View style="@style/viewDivider" />

</LinearLayout>