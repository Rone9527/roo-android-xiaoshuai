<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <solid android:color="#3A4363" />
            <stroke android:width="8dp" android:color="@color/blue_color" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape>
            <solid android:color="#3A4363" />
            <stroke android:width="8dp" android:color="#1F2742" />
        </shape>
    </item>

</selector>