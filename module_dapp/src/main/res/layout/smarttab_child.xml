    <View
        android:background="#F4F4F4"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </View>
    <com.ogaclejapan.smarttablayout.SmartTabLayout

        android:id="@+id/viewpagertab_child"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="left"
        app:stl_clickable="true"
        app:stl_customTabTextLayoutId="@layout/custom_tab_dapp_child"
        app:stl_customTabTextViewId="@+id/tab_text"
        app:stl_defaultTabBackground="@drawable/shape_grade_select"
        app:stl_defaultTabTextAllCaps="true"
        app:stl_defaultTabTextColor="#FC000000"
        app:stl_defaultTabTextHorizontalPadding="16dp"
        app:stl_defaultTabTextMinWidth="80dp"
        app:stl_defaultTabTextSize="12sp"
        app:stl_distributeEvenly="false"
        app:stl_dividerColor="#4D000000"
        app:stl_dividerThickness="0dp"
        app:stl_drawDecorationAfterTab="false"

        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorColor="#71B8FF"
        app:stl_indicatorCornerRadius="18dp"
        app:stl_indicatorGravity="center"
        app:stl_indicatorInFront="true"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="0dp"

        app:stl_indicatorWidth="auto"
        app:stl_indicatorWithoutPadding="false"


        app:stl_overlineColor="#4D000000"
        app:stl_overlineThickness="0dp"
        app:stl_titleOffset="24dp"
        app:stl_underlineColor="#06ed63"
        app:stl_underlineThickness="0dp" />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</LinearLayout>