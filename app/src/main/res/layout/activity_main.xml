<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.roo.wallet.mvp.ui.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.roo.core.ui.widget.ExViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shape_main_divider" />

        <me.majiajie.pagerbottomtabstrip.PageNavigationView
            android:id="@+id/page_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/background_color"
            app:NavigationPaddingTop="4dp" />
    </LinearLayout>


    <com.aries.ui.view.radius.RadiusTextView
        android:id="@+id/tvTest"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:gravity="center"
        android:text="æµ‹"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:rv_backgroundColor="@color/blue_color"
        app:rv_radius="20dp"
        tools:visibility="visible" />

</RelativeLayout>