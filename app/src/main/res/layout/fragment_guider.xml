<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/ivGuider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        tools:src="@drawable/ic_app_guide_1" />

    <RelativeLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_alignParentBottom="true"
        android:background="@color/background_color">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvTitleSub"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color_dark_normal"
            android:textSize="27sp"
            tools:text="@string/guide_two_title" />

        <TextView
            android:id="@+id/tvTitleSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvJump"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="66dp"
            android:textColor="@color/white_color_assist_5"
            android:textSize="14sp"
            tools:text="@string/guide_two_tubtitle" />

        <com.aries.ui.view.radius.RadiusTextView
            android:id="@+id/tvJump"
            style="@style/submitButton.blue"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="57dp"
            android:layout_marginBottom="42dp"
            android:text="@string/welcome_roo"
            android:textColor="@color/background_color"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>
