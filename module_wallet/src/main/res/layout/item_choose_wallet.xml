<?xml version="1.0" encoding="utf-8"?>
<com.aries.ui.view.radius.RadiusLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="15dp"
    android:orientation="horizontal"
    android:paddingHorizontal="25dp"
    app:rv_backgroundColor="@color/background_color_dark"
    app:rv_radius="8dp"
    app:rv_selected="false"
    app:rv_strokeSelectedColor="@color/blue_color"
    app:rv_strokeWidth="2dp"
    tools:layout_margin="15dp"
    tools:rv_selected="true">

    <ImageView
        android:id="@+id/ivLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/ic_home_choose_wallet_sel" />

    <TextView
        android:id="@+id/tvLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_dark_normal"
        android:textSize="16sp"
        tools:text="用户钱包" />


    <ImageView
        android:id="@+id/ivCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:checked="false"
        android:src="@drawable/ic_common_cb_sel" />

</com.aries.ui.view.radius.RadiusLinearLayout>